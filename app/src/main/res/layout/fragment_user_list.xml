<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:layout_width="116dp"
        android:layout_height="wrap_content"
        android:id="@+id/userEmail" android:layout_gravity="right" android:text="New Text"
        android:layout_alignParentTop="true" android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/country" android:layout_alignParentRight="true"
        android:gravity="right" android:layout_margin="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/country" android:layout_gravity="center_horizontal"
        android:text="Country"
        android:layout_below="@+id/addressTV" android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_width="116dp"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/addressTV" android:layout_gravity="right"
        android:layout_below="@+id/userEmail" android:layout_alignStart="@+id/userEmail"
        android:layout_alignWithParentIfMissing="false" android:layout_alignParentRight="true"
        android:gravity="right" android:layout_margin="10dp"/>
</RelativeLayout>