<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.benwong.geochat"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_GPS"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:label="@string/app_name"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.benwong.geochat.MainActivity"/>
        </activity>
        <activity android:name=".UserListActivity">

            <!-- <intent-filter> -->
            <!-- <action android:name="android.intent.action.MAIN"/> -->


            <!-- <category android:name="android.intent.category.LAUNCHER"/> -->
            <!-- </intent-filter> -->
        </activity>
        <activity
            android:name=".UserProfileActivity"
            android:label="@string/app_name"
            android:parentActivityName=".UserListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.benwong.geochat.UserListActivity"/>
        </activity>
        <activity
            android:name=".UserDetailActivity"
            android:label="@string/app_name"
            android:parentActivityName=".UserListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.benwong.geochat.UserListActivity"/>
        </activity>
        <activity
            android:name=".MessageActivity"
            android:label="Origin Chat"
            android:parentActivityName=".UserListActivity"
          >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.benwong.geochat.UserListActivity"/>
        </activity>
    </application>

</manifest>
